<div id="Home">
    <Card Color="CardColor.Secondary" Id="@Model.HouseName">
        <CardBody Style="min-height: 8em;">
            <CardLink Style="text-decoration:none; color: white;" To="/homepage">
                <div id="HomeTitle">
                    <CardTitle Size="HeadingSize.H3">@Model.HouseName</CardTitle>
                </div> <!-- end HomeTitle-->
                <CardText> @Model.Description </CardText>
                <CardFooter Style="text-align:right; background:none;"> @Model.LastUpdated </CardFooter>
            </CardLink>
        </CardBody>
    </Card>
</div> <!-- end Home -->
